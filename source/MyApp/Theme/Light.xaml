        x:Key="Label14ExtraBold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource ExtraBoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size14}" />
    </Style>



    <Style
        x:Key="Label16"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size16}" />
    </Style>

    <Style
        x:Key="Label16Bold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource BoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size16}" />
    </Style>

    <Style
        x:Key="Label16ExtraBold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource ExtraBoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size16}" />
    </Style>



    <Style
        x:Key="Label18"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size18}" />
    </Style>

    <Style
        x:Key="Label18Bold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource BoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size18}" />
    </Style>

    <Style
        x:Key="Label18ExtraBold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource ExtraBoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size18}" />
    </Style>



    <Style
        x:Key="Label20"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size20}" />
    </Style>

    <Style
        x:Key="Label20Bold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource BoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size20}" />
    </Style>

    <Style
