<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="MyApp.Theme.Light"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:styles="clr-namespace:MyApp.Theme.Style">

    <ResourceDictionary.MergedDictionaries>
        <styles:ConverterStyle />
        <styles:ColorStyle />
        <styles:FontStyle />
        <styles:SizeStyle />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="Label12"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size12}" />
    </Style>

    <Style
        x:Key="Label12Bold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource BoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size12}" />
    </Style>

    <Style
        x:Key="Label12ExtraBold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource ExtraBoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size12}" />
    </Style>



