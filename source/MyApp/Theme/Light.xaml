    </Style>

    <Style
        x:Key="Label32ExtraBold"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="FontFamily" Value="{StaticResource ExtraBoldFont}" />
        <Setter Property="FontSize" Value="{StaticResource Size32}" />
    </Style>

    <Style
        x:Key="ContentPageDefault"
        ApplyToDerivedTypes="True"
        TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray100}" />
    </Style>

    <Style
        x:Key="ActivityIndicatorStyleDefault"
        TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{DynamicResource BlackColor}" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="WidthRequest" Value="32" />
    </Style>

    <Style
        x:Key="HeaderDefault"
        TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray200}" />
    </Style>

    <Style
        x:Key="ButtonPrimary"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Blue600Color}" />
        <Setter Property="TextColor" Value="{DynamicResource WhiteColor}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="FontFamily" Value="{DynamicResource BoldFont}" />
        <Setter Property="FontSize" Value="{DynamicResource Size16}" />
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusButton}" />
        <Setter Property="HeightRequest" Value="{DynamicResource HeightButton}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style
        x:Key="LaunchFramePrimary"
        TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray200}" />
        <Setter Property="BorderColor" Value="{DynamicResource Gray200}" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style
        x:Key="ShellDefaultStyle"
        TargetType="Shell">
        <Setter Property="Shell.TitleColor" Value="{DynamicResource black}" />
        <Setter Property="Shell.ForegroundColor" Value="{DynamicResource BlackColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray200}" />
    </Style>
</ResourceDictionary>